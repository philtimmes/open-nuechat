# ===========================================
# Open-NueChat - Environment Configuration
# ===========================================
# Copy this file to .env and customize the values

# ===========================================
# BRANDING & CUSTOMIZATION
# ===========================================

# Application Identity
APP_NAME=Open-NueChat
APP_TAGLINE=AI-Powered Chat Platform
APP_VERSION=1.0.0
APP_DESCRIPTION=A full-featured LLM chat platform

# Visual Branding
FAVICON_URL=/favicon.ico
# LOGO_URL=/logo.png
# LOGO_TEXT=MyChat

# Default Theme: dark, light, midnight, forest, sunset, ocean
DEFAULT_THEME=dark

# Custom Brand Colors (optional - override theme defaults)
# BRAND_PRIMARY_COLOR=#6366f1
# BRAND_SECONDARY_COLOR=#818cf8
# BRAND_ACCENT_COLOR=#f59e0b

# Footer & Legal
# FOOTER_TEXT=Â© 2025 Your Company. All rights reserved.
# PRIVACY_URL=https://yoursite.com/privacy
# TERMS_URL=https://yoursite.com/terms
# SUPPORT_EMAIL=support@yoursite.com

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_OAUTH_GOOGLE=true
ENABLE_OAUTH_GITHUB=true
ENABLE_BILLING=true
ENABLE_PUBLIC_ASSISTANTS=true
ENABLE_PUBLIC_KNOWLEDGE_STORES=true

# Welcome Message (for new users)
# WELCOME_TITLE=Welcome to {app_name}!
# WELCOME_MESSAGE=Start a conversation with AI. Ask questions, get help with tasks, or just chat.

# ===========================================
# DATABASE
# ===========================================

DATABASE_URL=sqlite+aiosqlite:///./nuechat.db

# ===========================================
# SECURITY
# ===========================================

SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS (JSON array of allowed origins)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ===========================================
# LLM CONFIGURATION (OpenAI-Compatible API)
# ===========================================

LLM_API_BASE_URL=http://localhost:8080/v1
LLM_API_KEY=not-needed
LLM_MODEL=default
LLM_TIMEOUT=120
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# ===========================================
# OAUTH PROVIDERS
# ===========================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/oauth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
# GITHUB_REDIRECT_URI=http://localhost:8000/api/auth/oauth/github/callback

# ===========================================
# STRIPE BILLING
# ===========================================

STRIPE_API_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
# STRIPE_PRICE_PRO=price_your-pro-price-id
# STRIPE_PRICE_ENTERPRISE=price_your-enterprise-price-id

# Tier Token Limits
FREE_TIER_TOKENS=100000
PRO_TIER_TOKENS=1000000
ENTERPRISE_TIER_TOKENS=10000000

# Token Pricing (per 1M tokens) - Set to 0 for local LLMs
INPUT_TOKEN_PRICE=0.0
OUTPUT_TOKEN_PRICE=0.0

# ===========================================
# RAG CONFIGURATION
# ===========================================

# Embedding model (sentence-transformers, runs on ROCm GPU)
EMBEDDING_MODEL=all-MiniLM-L6-v2
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RESULTS=5

# FAISS GPU Index Settings
FAISS_INDEX_DIR=./faiss_indexes
FAISS_NPROBE=32
FAISS_USE_GPU=true

# ===========================================
# FILE UPLOADS
# ===========================================

MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads

# ===========================================
# IMAGE GENERATION
# ===========================================

# Image generation service URL (optional - enables "generate an image of..." requests)
# IMAGE_GEN_SERVICE_URL=http://image-service:8000

# Use LLM to confirm image generation intent (prevents false positives)
# When true: asks LLM "is this an image generation request?" before generating
# When false: relies only on regex pattern matching (more false positives)
IMAGE_CONFIRM_WITH_LLM=true

# ===========================================
# WEBSOCKET
# ===========================================

WS_HEARTBEAT_INTERVAL=30
